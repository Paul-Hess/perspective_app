
<div class="sign-up">
  <form>
    <h1 class="sign">Sign Up!</h1>
    {{input type='text' value=userName placeholder='user name'}}
    {{input type='text' value=firstName placeholder='first name'}}
    {{input type='text' value=lastName placeholder='last name'}}
    {{input type='text' value=email placeholder='email'}}
    {{input type='text' value=password placeholder='password'}}
    {{input type='text' value=passwordCheck placeholder='confirm password'}}
    <button {{action 'signUp'}}>{{fa-icon 'plus-square-o'}} Sign Up</button>
  </form>
</div>


