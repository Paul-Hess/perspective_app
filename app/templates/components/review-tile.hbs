<div class="reviews">
  <h3>Comments</h3>
  <ul>
    {{#each post.comments as |comment|}}
    <div class="comment">
      <span class="userName">{{comment.user.userName}}</span>: {{comment.body}}
    </div>
    {{/each}}
  </ul>

  {{#liquid-if addNewReview}}
    <form class="newReview">
      {{textarea value=body id="body"}} <br>
      <button {{action 'saveReview1' post}}>Save Review</button>
    </form>
  {{else}}
  <button {{action 'showReviewForm'}}>Leave a Review</button>
  {{/liquid-if}}

</div>
